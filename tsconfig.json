{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": false,
        "removeComments": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
      },
      "exclude": [
          "node_modules",
          "./dist",
          "./build",
          "./website"
      ]
}